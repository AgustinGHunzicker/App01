<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtNuevoPlato"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/laberNuevoPlato"
        android:padding="20dp"
        android:textSize="25dp"/>

    <EditText
        android:id="@+id/textTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/labelTituloPlato"
        android:inputType="text"
        android:padding="5dp"/>

    <EditText
        android:id="@+id/textDescripcion"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:gravity="fill_horizontal"
        android:hint="@string/labelDescripcion"
        android:padding="5dp" />
    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:orientation="horizontal"
        >

        <EditText
            android:id="@+id/textPrecio"
            android:layout_width="139dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="@string/labelPrecio"
            android:importantForAutofill="no"
            android:inputType="number"/>

        <EditText
            android:id="@+id/textCategorias"
            android:layout_width="133dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="@string/labelCalorias"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="3"   />
    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btnGuardar" />


</LinearLayout>